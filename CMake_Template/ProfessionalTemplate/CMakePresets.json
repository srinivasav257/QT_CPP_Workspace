{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "ENABLE_WARNINGS": "ON",
                "ENABLE_IPO": "OFF",
                "ENABLE_PCH": "ON",
                "ENABLE_SUPERBUILD": "OFF"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release build with optimizations",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_IPO": "ON"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "description": "Release build with Debug Info",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "ENABLE_IPO": "ON"
            }
        },
        {
            "name": "asan",
            "displayName": "Address Sanitizer",
            "description": "Debug build with Address Sanitizer",
            "inherits": "debug",
            "cacheVariables": {
                "ENABLE_SANITIZER_ADDRESS": "ON",
                "ENABLE_SANITIZER_LEAK": "ON",
                "ENABLE_SANITIZER_UNDEFINED": "OFF"
            }
        },
        {
            "name": "tsan",
            "displayName": "Thread Sanitizer",
            "description": "Debug build with Thread Sanitizer",
            "inherits": "debug",
            "cacheVariables": {
                "ENABLE_SANITIZER_THREAD": "ON"
            }
        },
        {
            "name": "vs-debug",
            "displayName": "Visual Studio Debug",
            "inherits": [
                "base",
                "windows-base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "asan",
            "configurePreset": "asan"
        },
        {
            "name": "vs-debug",
            "configurePreset": "vs-debug"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}